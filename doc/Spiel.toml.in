[library]
version = "@version@"
browse_url = "https://github.com/project-spiel/libspiel"
repository_url = "https://github.com/project-spiel/libspiel.git"
website_url = "https://project-spiel.org"
docs_url = "https://project-spiel.org/libspiel/"
authors = "Eitan Isaacson"
logo_url = "spiel-logo.svg"
license = "@license@"
description = "A library that interfaces with D-Bus speech synthesis providers."
dependencies = [ "GObject-2.0", "GLib-2.0", "Gio-2.0"]
devhelp = true
search_index = true

  [dependencies."GObject-2.0"]
  name = "GObject"
  description = "The base type system library"
  docs_url = "https://docs.gtk.org/gobject/"

  [dependencies."GLib-2.0"]
  name = "GLib"
  description = "The base type system library"
  docs_url = "https://docs.gtk.org/glib/"

  [dependencies."Gio-2.0"]
  name = "GIO"
  description = "GObject Interfaces and Objects, Networking, IPC, and I/O"
  docs_url = "https://docs.gtk.org/gio/"

[theme]
name = "basic"
show_index_summary = true
show_class_hierarchy = true

[source-location]
base_url = "https://github.com/project-spiel/libspiel/blob/main/"

[extra]
urlmap_file = "urlmap.js"
content_files = ["overview.md"]
content_images = ["spiel-logo.svg"]